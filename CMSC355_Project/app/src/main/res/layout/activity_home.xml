<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/buttonSettings"
            android:layout_width="60dp"
            android:layout_height="56dp"
            android:layout_gravity="start"
            android:background="@android:drawable/ic_menu_sort_by_size" />

        <ImageButton
            android:id="@+id/goTimer"
            android:layout_width="60dp"
            android:layout_height="56dp"
            android:background="@drawable/rounded_edges"
            android:onClick="goTimer"
            android:tint="@android:color/holo_blue_dark"
            app:srcCompat="@android:drawable/ic_lock_idle_alarm" />

        <ImageButton
            android:id="@+id/stopwatchButton"
            android:layout_width="60dp"
            android:layout_height="56dp"
            android:background="@drawable/rounded_edges"
            android:onClick="goStopwatch"
            android:tint="@android:color/holo_blue_dark"
            app:srcCompat="@android:drawable/ic_menu_recent_history" />

        <ImageButton
            android:id="@+id/infoButton"
            android:layout_width="60dp"
            android:layout_height="56dp"
            android:background="@drawable/rounded_edges"
            android:onClick="goInfoScreen"
            android:tint="@android:color/holo_blue_dark"
            app:srcCompat="@android:drawable/ic_menu_info_details" />

        <Button
            android:id="@+id/bodyweightButton"
            android:layout_width="70dp"
            android:layout_height="56dp"
            android:background="@drawable/rounded_edges"
            android:fontFamily="@font/share_tech_mono"
            android:onClick="goBodyweightScreen"
            android:text="@string/basicBody1"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="12sp"
            android:tint="@android:color/holo_blue_dark"
            app:srcCompat="@android:drawable/ic_menu_info_details" />

        <Button
            android:id="@+id/weightButton"
            android:layout_width="70dp"
            android:layout_height="56dp"
            android:background="@drawable/rounded_edges"
            android:fontFamily="@font/share_tech_mono"
            android:onClick="goWeightedScreen"
            android:text="@string/basicWeight1"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="12sp"
            android:tint="@android:color/holo_blue_dark"
            app:srcCompat="@android:drawable/ic_menu_info_details" />


    </LinearLayout>

    <ImageView
        android:id="@+id/simplyLogo"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/SimplyLift"
        app:srcCompat="@drawable/name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonEditWorkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_edges"
            android:fontFamily="@font/share_tech_mono"
            android:text="@string/edit_workout"
            android:textColor="@android:color/holo_blue_dark" />

        <Button
            android:id="@+id/buttonCreateWorkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:textColor="@android:color/holo_blue_dark"
            android:background="@drawable/rounded_edges"
            android:fontFamily="@font/share_tech_mono"
            android:text="@string/create_n_new_workout_t" />

        <Button
            android:id="@+id/buttonDeleteWorkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/holo_blue_dark"
            android:background="@drawable/rounded_edges"
            android:fontFamily="@font/share_tech_mono"
            android:text="@string/delete_loaded_workout" />

    </LinearLayout>

    <Spinner
        android:id="@+id/loadWorkoutDropdown"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_edges"
        android:gravity="center"/>

    <ListView
        android:id="@+id/workList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/rounded_edges" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_recent_history" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_recent_history" />


</LinearLayout>
